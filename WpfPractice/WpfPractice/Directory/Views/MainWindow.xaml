<Window x:Class="SoundBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoard"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="My test wpf application (c)" x:Name="Window" MinHeight="350" MinWidth="350" Width="auto" Height="500"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" 
        FontSize="15" Background="WhiteSmoke">

    <Window.Resources>

    </Window.Resources>
    <Grid>
        <!--Grid column and row definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        

        <!--The menu-->
        <Menu Grid.ColumnSpan="1">
            <MenuItem Header="File">
                <MenuItem Header="Add Sound" Command="{Binding AddSound}" />
                <MenuItem Header="Add Folder" Command="{Binding AddFolder}" />
                <!--<MenuItem Header="Remove Sound" />-->
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Refresh files" Command="{Binding RefreshFiles}" />
                <MenuItem Header="Change Directory" Command="{Binding ChangeDefaultDirectory}" />
            </MenuItem>
        </Menu>

        <!--Volume slider-->
        <Slider x:Name="volumSlider" Grid.Column="6" VerticalAlignment="Center" ValueChanged="volumSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.75" Width="70" />

        <!--Button to stop all sounds from playing-->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="7">
            <Button Style="{StaticResource stopButton}" Command="{Binding StopSound}" Content="Stop all Sounds" Background="DarkRed"/>
        </StackPanel>

        <!--Enables the use of the scrollbar when needed-->
        <ScrollViewer Grid.ColumnSpan="7" Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <!--Items control to create a button for every item in the collection-->
            <ItemsControl x:Name="MySounds" ItemsSource="{Binding Sounds}">
                <!--Defines the template to use a wrappanel-->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <!--Sets the itemtemplate for every item-->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Button Style="{StaticResource mainButton}" 
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.PlaySound}" 
                                    CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}"
                                    Tag="{Binding Path=Name}">
                                <TextBlock Text="{Binding Path=NormalizedName}" TextWrapping="Wrap" Height="auto" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <GridSplitter Grid.Row="3" Grid.ColumnSpan="7" Height="3" HorizontalAlignment="Stretch" Background="LightBlue" BorderThickness="1" BorderBrush="Red"></GridSplitter>
        
        <Label Background="Black" Foreground="White" Grid.Row="4" Grid.ColumnSpan="2" Content="{Binding DefaultDirectory}" ContentStringFormat="Directory: {0}" FontSize="11" />
        <GridSplitter Grid.Row="4" Grid.Column="5" HorizontalAlignment="Stretch"/>
        <ListBox Background="Black" Foreground="White" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" ItemsSource="{Binding StatusListView}" FontSize="11" />
        <GridSplitter Grid.Row="4" Grid.Column="2" HorizontalAlignment="Stretch"/>
        <Label Background="Black" Foreground="White" x:Name="TimerLabel" Grid.Row="4" Grid.Column="6" Content="{Binding TimeLabel}" ContentStringFormat="Time: {0}" HorizontalContentAlignment="Right" FontSize="11"/>
    </Grid>

</Window>


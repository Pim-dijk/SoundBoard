<Window x:Class="SoundBoard.Views.ChangeNameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="clr-namespace:SoundBoard.Utilities"
        xmlns:local="clr-namespace:SoundBoard.Views"
        mc:Ignorable="d"
        Title="Change name dialog" Icon="/SoundBoard;component/Images/musicIcon.png"  Height="150" Width="300" ShowInTaskbar="True" 
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" FontFamily="Tahoma" FontSize="13" 
        FocusManager.FocusedElement="{Binding ElementName=textField}">

    <Window.Resources>
        <utilities:NotEmptyStringConverter x:Key="NESConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Change the name to:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <TextBox x:Name="textField" Grid.Row="1" Text="{Binding Path=NameToChange, Mode=TwoWay}" Margin="15, 0, 15, 0" Height="30" FontSize="17" />

        <Button Grid.Row="2" HorizontalAlignment="Center" IsDefault="True" Content="Change"  Width="auto" Margin="0, 0, 0, 7" Padding="5, 2" Command="{Binding ChangeSoundNameSaved}">
            <Button.IsEnabled>
                <MultiBinding Converter="{StaticResource NESConverter}">
                    <Binding ElementName="textField" Path="Text"/>
                </MultiBinding>
            </Button.IsEnabled>
        </Button>
    </Grid>
</Window>

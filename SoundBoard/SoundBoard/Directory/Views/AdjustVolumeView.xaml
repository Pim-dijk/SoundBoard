<Window x:Class="SoundBoard.Views.AdjustVolumeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="clr-namespace:SoundBoard.Utilities"
        mc:Ignorable="d"
        Title="Adjust Volume" Height="120" Width="250" Icon="/SoundBoard;component/Images/musicIcon.png" ShowInTaskbar="True" 
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" FontFamily="Tahoma" FontSize="13" >
    
    <StackPanel>
        <TextBlock x:Name="text"  Margin="5" HorizontalAlignment="Center" Text="Use the slider to set the volume." />
        <Slider x:Name="Slider" Width="150" Margin="5"  Value="{Binding SoundVolume}" Minimum="0" Maximum="2" />
        <Button x:Name="confirm" Width="100" Margin="5" IsDefault="True" Content="Set" Click="confirm_Click" />
    </StackPanel>
</Window>
